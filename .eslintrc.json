{
  "extends": "react-app",
  "rules": {
    "no-undef": 0,
    "space-before-function-paren": "off",
    "indent": ["error", 2],
    "max-len": [
      "warn",
      80,
      {
        "ignoreComments": true,
        "ignoreTrailingComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "react/prop-types": "off",
    "no-unused-expressions": "off",
    "prefer-reflect": "off"
  },
  "overrides": [
    {
      "files": ["**/*.js"],
      "rules": {
        "no-unused-vars": ["off"],
        "no-undef": ["off"]
      }
    }
  ]
}
